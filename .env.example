# =============================================================================
# GitHub Code Retrieval HTTP Server - Configuration
# =============================================================================
#
# FULLY LOCAL - No API keys required
# All embeddings run locally using sentence-transformers
#
# Copy this file to .env:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="GitHub Code Retrieval"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# HTTP SERVER CONFIGURATION
# =============================================================================
# Host: Use 0.0.0.0 to allow network access, 127.0.0.1 for localhost only
SERVER_HOST=0.0.0.0
# Port: The port the HTTP server will listen on
SERVER_PORT=8000

# =============================================================================
# EMBEDDING CONFIGURATION (Local)
# =============================================================================
# Model: sentence-transformers model name
# all-MiniLM-L6-v2 is fast and produces good quality embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Device: "cpu", "cuda" (NVIDIA GPU), or "mps" (Apple Silicon)
EMBEDDING_DEVICE=cpu

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
VECTOR_STORE_BACKEND=chroma
VECTOR_STORE_PATH=./data/vector_db
VECTOR_STORE_COLLECTION=codebase

# =============================================================================
# REPOSITORY CONFIGURATION
# =============================================================================
REPO_STORAGE_PATH=./data/repos
REPO_CACHE_TTL_HOURS=24
REPO_MAX_SIZE_MB=500

# =============================================================================
# CODE INDEXING CONFIGURATION
# =============================================================================
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
MAX_FILE_SIZE_KB=500
INDEXING_BATCH_SIZE=50
