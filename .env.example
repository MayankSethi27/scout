# =============================================================================
# Scout Code Navigator - Configuration
# =============================================================================
# Copy to .env: cp .env.example .env

# Application
APP_NAME="Scout Code Navigator"
APP_VERSION="3.0.0"
DEBUG=false

# HTTP Server (for mcp_server.py network mode)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Repository cloning (for GitHub URLs only, local repos need no config)
REPO_STORAGE_PATH=~/.scout/repos
REPO_CACHE_TTL_HOURS=24
REPO_CLONE_TIMEOUT_SECONDS=300
